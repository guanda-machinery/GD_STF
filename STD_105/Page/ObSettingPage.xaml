<WPFBase:BasePage  x:TypeArguments="STD105VM:ObSettingVM"
                   x:Class="STD_105.ObSettingPage"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                   xmlns:local="clr-namespace:STD_105"
                   mc:Ignorable="d"
                   xmlns:WPFSTD="clr-namespace:WPFSTD105;assembly=WPFSTD105"
                   xmlns:wpf="http://materialdesigninxaml.net/winfx/xaml/themes"
                   xmlns:STD105VM="clr-namespace:WPFSTD105.ViewModel;assembly=WPFSTD105"
                   xmlns:WPFBase="clr-namespace:WPFWindowsBase;assembly=WPFWindowsBase"
                   xmlns:ddes="http://schemas.devdept.com/winfx/2008/xaml/control"
                   xmlns:ddgr="http://schemas.devdept.com/winfx/2008/xaml/graphics"
                   xmlns:SofSettings="clr-namespace:WPFSTD105.Properties;assembly=WPFSTD105"
                   d:DesignHeight="1160"
                   d:DesignWidth="1500"
                   xmlns:spa="clr-namespace:WPFSTD105;assembly=WPFSTD105"
                   Title="製品設定"
                   Unloaded="BasePage_Unloaded">
    <WPFBase:BasePage.Resources>
        <ResourceDictionary>
            <local:OBJECT_TYPE_ToStringConverter x:Key="obType" />
            <!--<local:MATERIAL_ToStringConverter x:Key="Material"/>-->
            <local:FACE_ToStringConverter x:Key="Face" />
            <local:START_HOLE_ToStringConverter x:Key="StartHole" />
        </ResourceDictionary>
    </WPFBase:BasePage.Resources>
    <!--頁面框架-->
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition  />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="1.5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition  />
            <RowDefinition Height="5" />
            <RowDefinition Height="1.2*" />
        </Grid.RowDefinitions>
        <!--繪圖顯示模型-->
        <Grid Grid.ColumnSpan="5"
              Grid.RowSpan="3"
              Panel.ZIndex="99999"
              Background="{ StaticResource solidclr_LightGray }">
            <!--" Visibility="{Binding ThreeDimensionalDisplayControl, Converter={WPFBase:BooleanToVisiblityConverter}}">-->
            <TabControl Name="tabControl"
                        SelectionChanged="TabControlSelectedIndexChanged"
                        Style="{StaticResource tabcontrol_STD}">
                <TabItem Header="3D視圖"
                         Style="{StaticResource tabitem_STD}">
                    <Grid>
                        <!--新增3D模型處-->
                        <spa:ModelExt SelectionChanged="model_SelectionChanged"
                                      Loaded="Model3D_Loaded"
                                      x:Name="model"
                                      AutoRefresh="True"
                                      SelectionColor="{Binding Setting.SelectionColor, Converter={local:StringToDrawingColoConverter}}"
                                      ActionMode="{Binding ActionMode}"
                                      DefaultColor="Beige"
                                      KeyDown="model_KeyDown"
                                      PreviewMouseRightButtonDown="model_PreviewMouseRightButtonDown"
                                      Focusable="True"
                                      AntiAliasingSamples="x16"
                                      ShowFps="True">
                            <spa:ModelExt.ContextMenu>
                                <ContextMenu Style="{StaticResource BaseStyle}"
                                             FontSize="12">
                                    <MenuItem Name="esc"
                                              Header="取消"
                                              Style="{StaticResource BaseStyle}"
                                              Command="{Binding Esc}" />
                                    <MenuItem Header="放大選取範圍"
                                              Style="{StaticResource BaseStyle}"
                                              Command="{Binding ZoomWindow}" />
                                    <MenuItem Header="縮放"
                                              Style="{StaticResource BaseStyle}"
                                              Command="{Binding Zoom}" />
                                    <MenuItem Header="旋轉"
                                              Style="{StaticResource BaseStyle}"
                                              Command="{Binding Rotate}" />
                                    <MenuItem Header="平移"
                                              Style="{StaticResource BaseStyle}"
                                              Command="{Binding Pan}" />
                                    <MenuItem Name="edit"
                                              Header="編輯已選擇"
                                              Style="{StaticResource BaseStyle}"
                                              Command="{Binding EditObject}"
                                              Visibility="Collapsed" />
                                    <MenuItem x:Name="delete"
                                              Header="刪除已選擇"
                                              Style="{StaticResource BaseStyle}"
                                              Command="{Binding Delete}"
                                              Visibility="Collapsed" />
                                    <MenuItem Header="清除標註"
                                              Command="{Binding ClearDim}"
                                              CommandParameter="{Binding ElementName=model}"
                                              Style="{StaticResource BaseStyle}" />
                                    <MenuItem Header="恢復上一個動作"
                                              Command="{Binding Recovery}"
                                              Style="{StaticResource BaseStyle}" />
                                    <MenuItem Header="恢復下一個動作"
                                              Command="{Binding Recovery}"
                                              Style="{StaticResource BaseStyle}" />
                                </ContextMenu>
                            </spa:ModelExt.ContextMenu>
                            <ddes:Model.ProgressBar>
                                <ddes:ProgressBar Lighting="False" />
                            </ddes:Model.ProgressBar>
                            <ddes:Model.Viewports>
                                <ddes:Viewport DisplayMode="Flat"
                                               InitialView="vcFrontFaceTopLeft"
                                               OriginSymbols="{Binding OriginSymbols}"
                                               SmallSizeRatio="0.001">
                                    <ddes:Viewport.Background>
                                        <ddgr:BackgroundSettings StyleMode="Solid"
                                                                 TopColor="{ StaticResource solidclr_LightGray }" />
                                    </ddes:Viewport.Background>
                                    <ddes:Viewport.CoordinateSystemIcon>
                                        <ddes:CoordinateSystemIcon Lighting="True"
                                                                   ArrowColorX="{Binding Setting.ArrowColorX, Converter={WPFBase:StringRGBToBrushConverter}}"
                                                                   ArrowColorY="{Binding Setting.ArrowColorY, Converter={WPFBase:StringRGBToBrushConverter}}"
                                                                   ArrowColorZ="{Binding Setting.ArrowColorZ, Converter={WPFBase:StringRGBToBrushConverter}}" />
                                    </ddes:Viewport.CoordinateSystemIcon>
                                    <ddes:Viewport.Camera>
                                        <ddes:Camera Distance="380"
                                                     ProjectionMode="Orthographic"
                                                     Target="0, 0, 45"
                                                     ZoomFactor="2" />
                                    </ddes:Viewport.Camera>
                                    <ddes:Viewport.Rotate>
                                        <ddes:RotateSettings RotationCenter="CursorLocation" />
                                    </ddes:Viewport.Rotate>
                                    <ddes:Viewport.ToolBars>
                                        <ddes:ToolBar>
                                            <ddes:ToolBar.Buttons>
                                                <ddes:HomeToolBarButton />
                                                <ddes:ZoomWindowToolBarButton />
                                                <ddes:ZoomToolBarButton />
                                                <ddes:PanToolBarButton />
                                                <ddes:RotateToolBarButton />
                                                <ddes:ZoomFitToolBarButton />
                                                <ddes:ToolBarButton ToolTipText="線性標註"
                                                                    Click="LinearDim"
                                                                    StyleMode="PushButton"
                                                                    Image="{Binding Source={StaticResource Measuring},Converter={local:DrawingImageToBitmapSourceConverter}}" />
                                                <ddes:ToolBarButton ToolTipText="角度標註"
                                                                    StyleMode="PushButton"
                                                                    Image="{Binding Source={StaticResource Protractor},Converter={local:DrawingImageToBitmapSourceConverter}}" />
                                                <ddes:ToolBarButton ToolTipText="絕對座標"
                                                                    StyleMode="PushButton"
                                                                    Image="{Binding Source={StaticResource AbsDim},Converter={local:DrawingImageToBitmapSourceConverter}}" />
                                                <ddes:ToolBarButton ToolTipText="設置平面"
                                                                    StyleMode="PushButton"
                                                                    Click="SetPlane"
                                                                    Image="{Binding Source={StaticResource AbsDim},Converter={local:DrawingImageToBitmapSourceConverter}}" />
                                            </ddes:ToolBar.Buttons>
                                        </ddes:ToolBar>
                                    </ddes:Viewport.ToolBars>
                                    <ddes:Viewport.ViewCubeIcon>
                                        <ddes:ViewCubeIcon Lighting="True"
                                                           FrontColor="{Binding Setting.ViewCubeIconColor, Converter={WPFBase:StringRGBToBrushConverter}}"
                                                           BackColor="{Binding Setting.ViewCubeIconColor, Converter={WPFBase:StringRGBToBrushConverter}}"
                                                           TopColor="{Binding Setting.ViewCubeIconColor, Converter={WPFBase:StringRGBToBrushConverter}}"
                                                           BottomColor="{Binding Setting.ViewCubeIconColor, Converter={WPFBase:StringRGBToBrushConverter}}"
                                                           RightColor="{Binding Setting.ViewCubeIconColor, Converter={WPFBase:StringRGBToBrushConverter}}"
                                                           LeftColor="{Binding Setting.ViewCubeIconColor, Converter={WPFBase:StringRGBToBrushConverter}}"
                                                           BackRingLabel="北"
                                                           FrontRingLabel="南"
                                                           RightRingLabel="東"
                                                           LeftRingLabel="西"
                                                           LeftRingColor="{ StaticResource solidclr_CreamyGray }"
                                                           RightRingColor="{ StaticResource solidclr_CreamyGray }"
                                                           FrontRingColor="{ StaticResource solidclr_CreamyGray }"
                                                           BackRingColor="{ StaticResource solidclr_CreamyGray }" />
                                    </ddes:Viewport.ViewCubeIcon>
                                </ddes:Viewport>
                            </ddes:Model.Viewports>
                        </spa:ModelExt>
                    </Grid>
                </TabItem>
                <!--2D圖形-->
                <TabItem Header="2D視圖"
                         Style="{StaticResource tabitem_STD}">
                    <Grid>
                        <spa:ModelExt x:Name="drawing"
                                      SelectionChanged="model_SelectionChanged"
                                      Loaded="drawing_Loaded"
                                      AutoRefresh="True"
                                      SelectionColor="{Binding Setting.SelectionColor, Converter={local:StringToDrawingColoConverter}}"
                                      ActionMode="{Binding ActionMode}"
                                      DefaultColor="Beige"
                                      KeyDown="model_KeyDown"
                                      PreviewMouseRightButtonDown="model_PreviewMouseRightButtonDown"
                                      Focusable="True"
                                      AntiAliasingSamples="x16"
                                      Renderer="NativeExperimental"
                                      ShowFps="True">
                            <spa:ModelExt.ContextMenu>
                                <ContextMenu Style="{StaticResource BaseStyle}"
                                             FontSize="12">
                                    <MenuItem Name="esc2D"
                                              Header="取消"
                                              Style="{StaticResource BaseStyle}"
                                              Command="{Binding Esc}" />
                                    <MenuItem Header="放大選取範圍"
                                              Style="{StaticResource BaseStyle}"
                                              Command="{Binding ZoomWindow}" />
                                    <MenuItem Header="縮放"
                                              Style="{StaticResource BaseStyle}"
                                              Command="{Binding Zoom}" />
                                    <MenuItem Header="平移"
                                              Style="{StaticResource BaseStyle}"
                                              Command="{Binding Pan}" />
                                    <MenuItem Name="edit2D"
                                              Header="編輯已選擇"
                                              Style="{StaticResource BaseStyle}"
                                              Command="{Binding EditObject}"
                                              Visibility="Collapsed" />
                                    <MenuItem x:Name="delete2D"
                                              Header="刪除已選擇"
                                              Style="{StaticResource BaseStyle}"
                                              Command="{Binding Delete}"
                                              Visibility="Collapsed" />
                                    <MenuItem Header="清除標註"
                                              Command="{Binding ClearDim}"
                                              Style="{StaticResource BaseStyle}" />
                                    <MenuItem Header="恢復上一個動作"
                                              Command="{Binding Recovery}"
                                              Style="{StaticResource BaseStyle}" />
                                    <MenuItem Header="恢復下一個動作"
                                              Command="{Binding Recovery}"
                                              Style="{StaticResource BaseStyle}" />
                                </ContextMenu>
                            </spa:ModelExt.ContextMenu>
                            <ddes:Model.ProgressBar>
                                <ddes:ProgressBar Lighting="False" />
                            </ddes:Model.ProgressBar>
                            <ddes:Model.Viewports>
                                <ddes:Viewport DisplayMode="Flat"
                                               InitialView="Top"
                                               OriginSymbols="{Binding OriginSymbols}">
                                    <ddes:Viewport.Background>
                                        <ddgr:BackgroundSettings StyleMode="Solid"
                                                                 TopColor="{ StaticResource solidclr_SilverGray }" />
                                    </ddes:Viewport.Background>
                                    <ddes:Viewport.Camera>
                                        <ddes:Camera Distance="380"
                                                     ProjectionMode="Orthographic"
                                                     Target="0, 0, 45"
                                                     ZoomFactor="2" />
                                    </ddes:Viewport.Camera>
                                    <ddes:Viewport.Rotate>
                                        <ddes:RotateSettings RotationCenter="CursorLocation"
                                                             Enabled="False" />
                                    </ddes:Viewport.Rotate>
                                    <ddes:Viewport.ToolBars>
                                        <ddes:ToolBar>
                                            <ddes:ToolBar.Buttons>
                                                <ddes:HomeToolBarButton />
                                                <ddes:ZoomWindowToolBarButton />
                                                <ddes:ZoomToolBarButton />
                                                <ddes:PanToolBarButton />
                                                <ddes:ZoomFitToolBarButton />
                                                <ddes:ToolBarButton ToolTipText="線性標註"
                                                                    Click="LinearDim"
                                                                    StyleMode="PushButton"
                                                                    Image="{Binding Source={StaticResource LinearDim},Converter={local:DrawingImageToBitmapSourceConverter}}" />
                                                <ddes:ToolBarButton ToolTipText="角度標註"
                                                                    Click="AngleDim"
                                                                    StyleMode="PushButton"
                                                                    Image="{Binding Source={StaticResource AngleDim},Converter={local:DrawingImageToBitmapSourceConverter}}" />
                                                <ddes:ToolBarButton ToolTipText="絕對座標"
                                                                    StyleMode="PushButton"
                                                                    Image="{Binding Source={StaticResource AbsDim},Converter={local:DrawingImageToBitmapSourceConverter}}" />
                                            </ddes:ToolBar.Buttons>
                                        </ddes:ToolBar>
                                    </ddes:Viewport.ToolBars>
                                </ddes:Viewport>
                            </ddes:Model.Viewports>
                        </spa:ModelExt>
                    </Grid>
                </TabItem>
            </TabControl>
            <!--
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top">
            <Button ToolTip="顯示/隱藏零件清單"
                    Background="Transparent"
                    Command="{Binding DisplayCreatedListCommand}"
                    Style="{StaticResource btn_CommonIconKey}">
                <Image Width="36"
                       Height="{ Binding RelativeSource={ x:Static RelativeSource.Self }, Path=Width}"
                       Source="{StaticResource CreatedList}" />
            </Button>
            <Button ToolTip="顯示/隱藏零件編輯器"
                    Background="Transparent"
                    Command="{Binding DisplayPartsCommand}"
                    Style="{StaticResource btn_CommonIconKey}">
                <Image Width="36"
                       Height="{ Binding RelativeSource={ x:Static RelativeSource.Self }, Path=Width}"
                       Source="{StaticResource edit_Gray}" />
            </Button>
            <Button ToolTip="顯示/隱藏孔位編輯器"
                    Background="Transparent"
                    Command="{Binding DisplayHoleCommand}"
                    Style="{StaticResource btn_CommonIconKey}">
                <Image Width="36"
                       Height="{ Binding RelativeSource={ x:Static RelativeSource.Self }, Path=Width}"
                       Source="{StaticResource LooseKnife}" />
            </Button>
            </StackPanel>
            關閉區域 
            <Button Margin="0,55,-5,0"
                    Command="{Binding Display3DViewerCommand}"
                    Style="{StaticResource btn_CloseIcon_STD}">
                <Image Width="25"
                       Height="25"
                       Source="{StaticResource Cross_Red}" />
            </Button>
             -->
        </Grid>
        <!--已建立的清單-->
        <GroupBox Grid.Row="2"
                Header="已建立的清單"
                  Width="300"
                  HorizontalAlignment="Left"
                  Panel.ZIndex="100001"
                  Style="{DynamicResource gbx_WithBorder}"
                  Visibility="{ Binding DisplayCreatedListControl, Converter={ WPFBase:BooleanToVisiblityConverter } }"
                  Margin="10">
            <Grid>
                <TreeView x:Name="tree"
                          ItemsSource="{Binding TreeNode}"
                          SelectedItemChanged="TreeView_SelectedItemChanged"
                          Style="{StaticResource treeView_STD}">
                    <TreeView.Resources>
                        <Style TargetType="TreeViewItem"
                               BasedOn="{ StaticResource treeViewItem_STD }"></Style>
                        <Style x:Key="imageNullValue"
                               TargetType="{ x:Type Image }">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding RelativeSource={x:Static RelativeSource.Self }, Path=Source}"
                                             Value="{x:Null}">
                                    <Setter Property="Visibility"
                                            Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TreeView.Resources>
                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                            <StackPanel Orientation="Horizontal">
                                <Image Width="25"
                                       Source="{Binding ItemName , Converter={ local:SectionTreeImageConverter }}"
                                       Style="{ StaticResource imageNullValue }"
                                       Margin="0,0,10,0" />
                                <TextBlock Text="{Binding ItemName}" />
                            </StackPanel>
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>
                <!--縮小區域-->
                <Button Background="Transparent"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Command="{ Binding DisplayCreatedListCommand }"
                        Style="{ StaticResource btn_CommonIconKey }"
                        Margin="0,-40,-10,0">
                    <Image Width="25"
                           Source="{ StaticResource Minimize }" />
                </Button>
                <!--  顯示3D  -->
                <Button Grid.Column="2"
                        Command="{Binding Display3DViewerCommand}"
                        Style="{StaticResource btn_Display3D}"
                        Visibility="Collapsed">
                    <Image Width="50"
                           Source="{StaticResource 3DViewer}" />
                </Button>
            </Grid>
        </GroupBox>
        <!--零件-->
        <GroupBox Grid.Row="2"
                  Width="380"
                  Header="零件"
                  Style="{StaticResource gbx_WithBorder }"
                  Panel.ZIndex="100001"
                  Visibility="{Binding DisplayPartsControl, Converter={WPFBase:OppositeBooleanToVisibilityConverter}}"
                  Margin="10">
            <Grid>
                <StackPanel>
                    <StackPanel.Resources>
                        <Style TargetType="Label"
                               BasedOn="{ StaticResource lab_SubTitle }">
                            <Setter Property="Foreground"
                                    Value="{ StaticResource solidclr_Gray }" />
                        </Style>
                        <Style TargetType="TextBox"
                               BasedOn="{ StaticResource tbx_BlueUnderline }">
                            <Setter Property="Foreground"
                                    Value="{ StaticResource solidclr_DimGray }" />
                            <Setter Property="FontSize"
                                    Value="{ Binding SubTitleFontSize, Source={ x:Static SofSettings:SofSetting.Default } }" />
                            <Setter Property="Width"
                                    Value="250" />
                            <Setter Property="HorizontalAlignment"
                                    Value="Center" />
                        </Style>
                        <Style TargetType="ComboBox"
                               BasedOn="{ StaticResource cbb_DarkMain }">
                            <Setter Property="FontSize"
                                    Value="{ Binding SubTitleFontSize, Source={ x:Static SofSettings:SofSetting.Default } }" />
                            <Setter Property="Width"
                                    Value="250" />
                            <Setter Property="HorizontalAlignment"
                                    Value="Center" />
                        </Style>
                    </StackPanel.Resources>
                    <Label Content="零件編號：" />
                    <TextBox Name="partNumber"
                             Text="{Binding SteelAttr.PartNumber}" />
                    <Label Content="構件編號：" />
                    <TextBox Text="" />
                    <Label Content="零件材質：" />
                    <ComboBox ItemsSource="{Binding Materials, Converter={local:MaterialToNameConverter}}"
                              SelectedIndex="{Binding MaterialIndex}" />
                    <Label Content="斷面規格：" />
                    <ComboBox ItemsSource="{Binding Source={StaticResource obType},Path=Strings}"
                              SelectedIndex="{Binding ProfileType}" />
                    <ComboBox ItemsSource="{Binding ProfileList}"
                              DisplayMemberPath="Profile"
                              SelectedIndex="{Binding ProfileIndex}" />
                    <Label Content="零件長度(mm)：" />
                    <TextBox Name="length"
                             Text="{Binding SteelAttr.Length}" />
                    <Label Content="零件數量：" />
                    <TextBox Name="number"
                             Text="{Binding SteelAttr.Number}" />
                </StackPanel>
                <local:DataButton Grid.ColumnSpan="2"
                                  DeleteVisibility="Collapsed"
                                  Read="{Binding ReadPart}"
                                  Add="{Binding AddPart}"
                                  Modify="{Binding ModifyPart}"
                                  VerticalAlignment="Bottom"
                                  HorizontalAlignment="Right" />
                <!--縮小區域-->
                <Button Background="Transparent"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Command="{ Binding DisplayPartsCommand }"
                        Style="{ StaticResource btn_CommonIconKey }"
                        Margin="0,-40,-10,0">
                    <Image Width="25"
                           Source="{ StaticResource Minimize }" />
                </Button>
            </Grid>
        </GroupBox>
        <!--孔位編輯-->
        <Grid Grid.Row="2"
              Grid.Column="2"
              Height="500"
              Width="480"
              VerticalAlignment="Bottom"
              HorizontalAlignment="Right"
              Panel.ZIndex="100001"
              Visibility="{Binding DisplayHoleControl, Converter={WPFBase:OppositeBooleanToVisibilityConverter}}"
              Margin="10">
            <TabControl Style="{StaticResource tabcontrol_STD}">
                <TabControl.Resources>
                    <Style TargetType="TabItem"
                           BasedOn="{ StaticResource tabitem_STD }">
                        <Setter Property="FontSize"
                                Value="{ Binding SubTitleFontSize, Source={ x:Static SofSettings:SofSetting.Default } }" />
                    </Style>
                    <Style TargetType="CheckBox"
                           BasedOn="{ StaticResource CheckedStyle }">
                        <Setter Property="Foreground"
                                Value="{ StaticResource solidclr_DimGray }" />
                        <Setter Property="FontSize"
                                Value="{ Binding SubTitleFontSize, Source={ x:Static SofSettings:SofSetting.Default } }" />
                        <Setter Property="Padding"
                                Value="2" />
                    </Style>
                    <Style TargetType="TextBox"
                           BasedOn="{ StaticResource tbx_BlueUnderline }">
                        <Setter Property="Foreground"
                                Value="{ StaticResource solidclr_DimGray }" />
                        <Setter Property="FontSize"
                                Value="{ Binding SubTitleFontSize, Source={ x:Static SofSettings:SofSetting.Default } }" />
                        <Setter Property="VerticalAlignment"
                                Value="Center" />
                        <Setter Property="Width"
                                Value="80" />
                    </Style>
                    <Style TargetType="ComboBox"
                           BasedOn="{ StaticResource cbb_DarkMain }">
                        <Setter Property="FontSize"
                                Value="{ Binding SubTitleFontSize, Source={ x:Static SofSettings:SofSetting.Default } }" />
                        <Setter Property="HorizontalAlignment"
                                Value="Center" />
                        <Setter Property="Width"
                                Value="100" />
                    </Style>
                    <Style TargetType="Label"
                           BasedOn="{ StaticResource lab_SubTitle }">
                        <Setter Property="HorizontalAlignment"
                                Value="Left" />
                        <Setter Property="Foreground"
                                Value="{ StaticResource solidclr_Gray }" />
                    </Style>
                    <Style TargetType="Button"
                           BasedOn="{ StaticResource btn_CommonIconKey }"></Style>
                </TabControl.Resources>
                <TabItem Header="鑽孔">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition Height="80" />
                            <RowDefinition Height="80" />
                        </Grid.RowDefinitions>
                        <!--直徑設定-->
                        <StackPanel Orientation="Horizontal">
                            <CheckBox Content="直徑"
                                      IsChecked="{Binding CheckDia}" />
                            <TextBox Grid.Column="1"
                                     Text="{Binding GroupBoltsAttr.Dia}"
                                     Margin="10,0" />
                            <ComboBox Grid.Column="2"
                                      SelectedIndex="{Binding AxisModeType}">
                                <ComboBoxItem Content="鑽孔" />
                                <ComboBoxItem Content="打點" />
                            </ComboBox>
                        </StackPanel>
                        <!--孔的起始位置-->
                        <StackPanel Grid.Row="1"
                                    Orientation="Horizontal">
                            <CheckBox IsChecked="{Binding CheckStartHole}" />
                            <ComboBox SelectedIndex="{Binding StartHoleType}"
                                      ItemsSource="{Binding Source={StaticResource StartHole}, Path=Strings}" />
                            <Label Content="X軸：" />
                            <TextBox Text="{Binding GroupBoltsAttr.X}" />
                            <Label Content="Y軸：" />
                            <TextBox Text="{Binding StartY}" />
                        </StackPanel>
                        <!--水平數量-->
                        <StackPanel Grid.Row="2"
                                    Orientation="Horizontal">
                            <CheckBox IsChecked="{Binding CheckX}"
                                      Content="水平向" />
                            <Label Content="數量：" />
                            <TextBox Text="{Binding GroupBoltsAttr.xCount}" />
                            <Label Content="間距：" />
                            <TextBox Text="{Binding GroupBoltsAttr.dX}"
                                     Width="160" />
                        </StackPanel>
                        <!--垂直數量-->
                        <StackPanel Grid.Row="3"
                                    Orientation="Horizontal">
                            <CheckBox Content="垂直向"
                                      IsChecked="{Binding CheckY}" />
                            <Label Content="數量：" />
                            <TextBox Text="{Binding GroupBoltsAttr.yCount}" />
                            <Label Content="間距：" />
                            <TextBox Text="{Binding GroupBoltsAttr.dY}"
                                     Width="160" />
                        </StackPanel>
                        <!--選擇面-->
                        <StackPanel Grid.Row="4"
                                    Orientation="Horizontal">
                            <CheckBox IsChecked="{Binding CheckFace}" />
                            <ComboBox Grid.Row="4"
                                      ItemsSource="{Binding Source={StaticResource Face},Path=Strings}"
                                      SelectedIndex="{Binding BoltsFaceType}" />
                        </StackPanel>
                        <!--鏡射-->
                        <StackPanel Grid.Row="5"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Right">
                            <Button  Content="X軸鏡射"
                                     Command="{Binding MirrorX}"
                                     Style="{ StaticResource btn_CommonFunctionKey_STD }" />
                            <Button Content="Y軸鏡射"
                                    Command="{Binding MirrorY}"
                                    Style="{ StaticResource btn_CommonFunctionKey_STD }" />
                        </StackPanel>
                        <local:DataButton Grid.Row="6"
                                          HorizontalAlignment="Right"
                                          Read="{Binding ReadHole}"
                                          Delete="{Binding DeleteHole}"
                                          Add="{Binding AddHole}"
                                          Modify="{Binding ModifyHole}" />
                    </Grid>
                </TabItem>
                <TabItem Header="铣削"></TabItem>
                <TabItem Header="畫線"></TabItem>
                <TabItem Header="切割線">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="3*" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Viewbox>
                            <Canvas Width="300"
                                    Height="250">
                                <ComboBox Style="{StaticResource cbb_Main}"
                                          Width="94"
                                          Canvas.Left="96"
                                          Canvas.Top="109"
                                          FontSize="{ Binding ParameterFontSize, Source={ x:Static SofSettings:SofSetting.Default } }"
                                          ItemsSource="{Binding Source={StaticResource Face},Path=Strings}"
                                          SelectedIndex="{Binding CutFaceType}" />
                                <Path x:Name="pa"
                                      Fill="{ Binding BorderBrushColor, Source={ x:Static SofSettings:SofSetting.Default } }"
                                      Stroke="{ Binding BorderBrushColor, Source={ x:Static SofSettings:SofSetting.Default } }"
