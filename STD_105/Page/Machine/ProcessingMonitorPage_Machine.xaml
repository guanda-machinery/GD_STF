                                        <Style TargetType="Image">
                                            <Setter Property="Width" Value="60"/>
                                            <Setter Property="Height" Value="60"/>
                                        </Style>
                                    </Style.Resources>
                                </Style>
                                <SolidColorBrush x:Key="SecondaryHueMidBrush" Color="#67b32c"/>
