                            <Border Grid.Row="0" Grid.ColumnSpan="3" BorderThickness="0,0,0,1" BorderBrush="Gray"/>
                            <RadioButton GroupName="Group_Transport" Name="Transport_RadioButton" Grid.Column="0"  IsChecked="False">
                                <Image Source="{StaticResource TransportDrawingImage}" />
                            </RadioButton>
                            <RadioButton GroupName="Group_Transport" Name="Transport_by_C_RadioButton" Grid.Column="1"  IsChecked="False">
                                <Image Source="{StaticResource Transport_by_ConveyorDrawingImage}"/>
                            </RadioButton>
                            <RadioButton GroupName="Group_Transport" Name="Transport_by_R_RadioButton" Grid.Column="2"   IsChecked="False">
