<WPFBase:BasePage  
    xmlns:WPFBase="clr-namespace:WPFWindowsBase;assembly=WPFWindowsBase"
    x:Class="STD_105.MachineFunction"
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
    xmlns:GD_STD="clr-namespace:GD_STD.Properties;assembly=GD_STD"
    xmlns:STDEnum="clr-namespace:GD_STD.Enum;assembly=GD_STD.Enum"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:STD_105" 
    xmlns:WPFSTD105VM="clr-namespace:WPFSTD105.ViewModel;assembly=WPFSTD105"
    xmlns:WPFSTD="clr-namespace:WPFSTD105;assembly=WPFSTD105"
 
    xmlns:materialDesign="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf" 
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid" 
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    mc:Ignorable="d"    
    Title="MachineFunction"
    >
    <WPFBase:BasePage.DataContext>
        <WPFSTD105VM:MachineFunctionVM/>
    </WPFBase:BasePage.DataContext>
    <WPFBase:BasePage.Resources>
        <Style TargetType="TextBlock"
               BasedOn="{ StaticResource tbk_Title }">
            <Setter Property="Foreground"
                    Value="{ StaticResource solidclr_Gray }" />
            <Setter Property="FontSize"
                    Value="28" />
            <Setter Property="FontWeight"
                    Value="Bold" />
            <Setter Property="TextWrapping"
                    Value="Wrap" />
        </Style>
        <Style TargetType="Button" BasedOn="{StaticResource SiegCustomButton}">
            <Setter Property="Height" Value="114"/>
        </Style>



    </WPFBase:BasePage.Resources>
    <Border Margin="0" BorderThickness="5" BorderBrush="#292929" Padding="0" Background="White">
        <Grid>
            <TabControl Padding="0" BorderThickness="0,2,0,0" BorderBrush="#6d6d6d" SelectedIndex="{Binding TabControlSelectedIndex,Mode=TwoWay}">
                <TabControl.Resources>
                    <ResourceDictionary>
                        <Style TargetType="TabItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type TabItem}">
                                        <Grid x:Name="Root">
                                            <Border x:Name="Border" Margin="10"
                                                    Width="{Binding ElementName=ContentSite, Path=Width}"
                                                    Height="{Binding ElementName=ContentSite, Path=Height}"
                                                    VerticalAlignment="Center"
                                                    Background="Transparent"
                                                    BorderBrush="Transparent"
                                                    BorderThickness="0,0,0,2">
                                                <ContentPresenter x:Name="ContentSite"
                                                                  Margin="0,2"
                                                                  HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"
                                                                  ContentSource="Header"
                                                                  RecognizesAccessKey="True"
                                                                  TextBlock.FontSize="16"
                                                                  TextBlock.Foreground="black" />
                                            </Border>
                                            <VisualStateManager.VisualStateGroups>
                                                <VisualStateGroup x:Name="CommonStates">

                                                    <VisualState x:Name="Normal" />
                                                    <VisualState x:Name="Selected">
                                                        <Storyboard>
                                                            <ColorAnimation Storyboard.TargetName="ContentSite"
                                                                            Storyboard.TargetProperty="(TextBlock.Foreground).Color"
                                                                            To="#000000"
                                                                            Duration="0" />

                                                            <ColorAnimation Storyboard.TargetName="Border"
                                                                            Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                                                            To="#4CFF00"
                                                                            Duration="0" />
                                                        </Storyboard>
                                                    </VisualState>
                                                </VisualStateGroup>
                                            </VisualStateManager.VisualStateGroups>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ResourceDictionary>
                </TabControl.Resources>
                <TabItem x:Name="HSteel_Clamp_TabItem">
                    <TabItem.Header>
                        <Image Source="{StaticResource HSteel_ClampDrawingImage}" Width="100"  Height="100"/>
                    </TabItem.Header>
                    <Border Background="#c0c0c0" Padding="20" >
                        <DockPanel>

                            <local:DPadUserControl x:Name="HSteel_Clamp_UserControl"  DockPanel.Dock="Top"  
                                                   DataContext="{Binding Machine_HSteelClampVM}">

                                <local:DPadUserControl.ButtonContent_3_Source>
                                    <Grid  VerticalAlignment="Center"  Width="100">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                        </Grid.RowDefinitions>
                                        <Image Grid.Column="0" Grid.Row="0" Source="{StaticResource RedArrow_upDrawingImage}" Height="25" Margin="-3,0,0,0"/>
                                        <Image Grid.Column="1" Grid.Row="0" Source="{StaticResource RedArrow_upDrawingImage}" Height="25" Margin="3,0,0,0"/>
                                        <Image Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Source="{StaticResource HSteel_ClampDrawingImage}" VerticalAlignment="Bottom" />
                                    </Grid>
                                </local:DPadUserControl.ButtonContent_3_Source>
                                <local:DPadUserControl.ButtonContent_4_Source>

                                    <Grid  VerticalAlignment="Center" Width="100">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                        </Grid.RowDefinitions>
                                        <Image Grid.Column="0" Grid.Row="0" Source="{StaticResource RedArrow_downDrawingImage}" Height="25" Margin="-3,0,0,0"/>
                                        <Image Grid.Column="1" Grid.Row="0" Source="{StaticResource RedArrow_downDrawingImage}" Height="25" Margin="3,0,0,0"/>
                                        <Image Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Source="{StaticResource HSteel_ClampDrawingImage}" VerticalAlignment="Bottom" />

                                    </Grid>

                                </local:DPadUserControl.ButtonContent_4_Source>
                            </local:DPadUserControl>
                            <GroupBox DataContext="{Binding Machine_HSteelClampVM}" Margin="0,5" Style="{StaticResource ParameterDarkGroupBox}" Header="下壓夾具選擇" DockPanel.Dock="Top" HorizontalAlignment="Left" Width="270" >
                             
                                <Grid >
                                    <Grid.Resources>
                                        <Style BasedOn="{StaticResource rad_Hook1}" TargetType="RadioButton" />
                                    </Grid.Resources>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <Border Margin="-9"
                            Grid.Column="0"  
                                        Grid.ColumnSpan="2"
                            Background="{StaticResource solidclr_DimGray}"
                            />
                                    <!--<Border Grid.Column="2" CornerRadius="0,10,10,0" BorderThickness="0,2,2,2" Background="{ Binding ElementName=rad_Wheel, Path=IsChecked, Converter={ WPFBase:BoolToColorCodeConverter }}"/>-->
                                    <Border Grid.Column="1" BorderThickness="4,0,0,0"  Margin="-2,0,0,0" Width="auto" Height="auto" BorderBrush="#6f6f6f"/>
                                    <Button Style="{StaticResource SiegClampDownSelectedButton}"         
                                        Height="50"
                                        FontSize="25" Margin="10"
                                        Grid.Column="0"
                                        Content="入口端" 
                                        IsEnabled="{Binding ApplicationViewModel.PanelButton.ClampDownSelected,Source={x:Static WPFSTD:ViewLocator.Instance},ConverterParameter={x:Static STDEnum:CLAMP_DOWN.Export},Converter={local:ClampDownToBoolenConverter}}" Cursor="Arrow">
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="PreviewMouseLeftButtonDown">
                                                <i:InvokeCommandAction  Command="{Binding LeftButtonCommand}"
                                                    CommandParameter="{x:Static STDEnum:JOYSTICK.ELLIPSE_BOTTOM_DESC}" />
                                            </i:EventTrigger>
                                            <i:EventTrigger EventName="PreviewMouseLeftButtonUp">
                                                <i:InvokeCommandAction  Command="{Binding LeftButtonCommand}"
                                                    CommandParameter="{x:Static STDEnum:JOYSTICK.NULL}" />
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </Button>
                                    <Button Style="{StaticResource SiegClampDownSelectedButton}"
                                        Height="50" 
                                        FontSize="25" Margin="10"
                            Grid.Column="1"
                            Content="出口端"
                            IsEnabled="{Binding ApplicationViewModel.PanelButton.ClampDownSelected,Source={x:Static WPFSTD:ViewLocator.Instance},ConverterParameter={x:Static STDEnum:CLAMP_DOWN.Entrance},Converter={local:ClampDownToBoolenConverter}}" Cursor="Arrow">
                                        <!---->
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="PreviewMouseLeftButtonDown">
                                                <i:InvokeCommandAction  Command="{Binding LeftButtonCommand}"
                                                    CommandParameter="{x:Static STDEnum:JOYSTICK.ELLIPSE_TOP_DESC}" />
                                            </i:EventTrigger>
                                            <i:EventTrigger EventName="PreviewMouseLeftButtonUp">
                                                <i:InvokeCommandAction  Command="{Binding LeftButtonCommand}"
                                                    CommandParameter="{x:Static STDEnum:JOYSTICK.NULL}" />
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </Button>
                                </Grid>

                            </GroupBox>



                            <CheckBox Grid.Column="1"  DockPanel.Dock="Bottom"
                                      IsThreeState="False"
                                  HorizontalAlignment="Right"
                                  VerticalAlignment="Bottom"
                                  Margin="5"
                                  Width="100"
                                  IsChecked="{Binding DescriptionDisplayBoolenAll}"
                                  Style="{ StaticResource GreenSwitch }" />

                        </DockPanel>

                    </Border>
                </TabItem>
                <TabItem Name="HSteel_Grab_TabItem">
                    <TabItem.Header>
                        <Image Source="{StaticResource HSteel_GrabDrawingImage}" Height="100"/>
                    </TabItem.Header>

                    <Border Background="#c0c0c0" Padding="20">
                        <DockPanel>
                            <local:DPadUserControl DockPanel.Dock="Top" DataContext="{Binding Machine_HSteelGrabVM}" >
                                <local:DPadUserControl.ButtonContent_1_Source>

                                    <Grid Margin="80,0"  VerticalAlignment="Center" HorizontalAlignment="Center" Width="100">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                        </Grid.RowDefinitions>
                                        <Image Grid.Column="0" Grid.Row="0" Source="{StaticResource RedArrow_leftDrawingImage}"  Width="25" HorizontalAlignment="Left"/>
                                        <Image Grid.Column="1" Grid.Row="0" Source="{StaticResource RedArrow_rightDrawingImage}" Width="25"  HorizontalAlignment="Right"/>
                                        <Image Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Source="{StaticResource HSteel_GrabDrawingImage}" VerticalAlignment="Bottom" Margin="0,-15" />
                                        </Grid>


                                </local:DPadUserControl.ButtonContent_1_Source>
                                <local:DPadUserControl.ButtonContent_2_Source>
                                   
                                    <Grid Margin="80,0" VerticalAlignment="Center" Width="100">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                        </Grid.RowDefinitions>
                                        <Image Grid.Column="0" Grid.Row="0" Source="{StaticResource RedArrow_rightDrawingImage}"  Width="25" HorizontalAlignment="Left"/>
                                        <Image Grid.Column="1" Grid.Row="0" Source="{StaticResource RedArrow_leftDrawingImage}" Width="25"  HorizontalAlignment="Right"/>
                                        <Image Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Source="{StaticResource HSteel_GrabDrawingImage}" VerticalAlignment="Bottom" Margin="0,-15" />
                                        </Grid>
                                    
                                </local:DPadUserControl.ButtonContent_2_Source>

                            </local:DPadUserControl>
                            <CheckBox Grid.Column="1"  DockPanel.Dock="Bottom"
                                  HorizontalAlignment="Right"
                                  VerticalAlignment="Bottom"
                                  Margin="5"
                                  Width="100"
                                  IsChecked="{Binding DescriptionDisplayBoolenAll}"
                                  Style="{ StaticResource GreenSwitch }" />
                        </DockPanel>


                    </Border>
                </TabItem>
                <TabItem Name="Transport_TabItem">
                    <TabItem.Header>
                        <Grid Width="100" Height="100">
                            <Image Source="{StaticResource TransportDrawingImage}"/>
                        </Grid>
                    </TabItem.Header>
                    <Border Background="#c0c0c0" Padding="10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>
                            <Grid.Resources>
                                <Style BasedOn="{StaticResource ParameterDarkGroupBox}" TargetType="GroupBox">
                                    <Setter Property="Margin" Value="5" />
                                </Style>
                                <Style BasedOn="{StaticResource rad_Hook1}" TargetType="RadioButton" />
                                <Style TargetType="Border">
                                    <Setter Property="BorderBrush" Value="{StaticResource solidclr_DimGray}" />
                                    <Setter Property="Height" Value="auto" />
                                    <Setter Property="Width" Value="auto" />
                                </Style>
                            </Grid.Resources>
                            <Grid DataContext="{Binding _RacksOperationVM}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition  Width="auto"/>
                                </Grid.ColumnDefinitions>
                                <!--  料架選擇  -->
                                <GroupBox Margin="10,5" Header="料架選擇" >
                                    <Grid HorizontalAlignment="Center">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Border
                            Grid.Column="0"  
                                        Grid.ColumnSpan="2"
                            Background="{StaticResource solidclr_DimGray}"
                            CornerRadius="50" />
                                        <!--<Border Grid.Column="2" CornerRadius="0,10,10,0" BorderThickness="0,2,2,2" Background="{ Binding ElementName=rad_Wheel, Path=IsChecked, Converter={ WPFBase:BoolToColorCodeConverter }}"/>-->
                                        <Border Grid.Column="1" BorderThickness="4,0,0,0"  Margin="-2,0,0,0" Width="auto" Height="auto" BorderBrush="#6f6f6f"/>
                                        <RadioButton           
                                        FontSize="25" Margin="30"
                            x:Name="rad_Entrance" 
                            Grid.Column="0"
                            Command="{Binding SelectEntranceRackCommand}"
                            Content="入口料架" 
                            IsChecked="{Binding ApplicationViewModel.PanelButton.EntranceRack, Source={x:Static WPFSTD:ViewLocator.Instance}}"
                            IsEnabled="{Binding EntranceReadOnly}" />
                                        <RadioButton 
                                        FontSize="25" Margin="30"
                            x:Name="rad_Exit"
                            Grid.Column="1"
                            Command="{Binding SelectExportRackCommand}"
                            Content="出口料架"
                                            
                            IsChecked="{Binding ApplicationViewModel.PanelButton.ExportRack, Source={x:Static WPFSTD:ViewLocator.Instance}}"
                            IsEnabled="{Binding ExportReadOnly}" />
                                        <!--<RadioButton x:Name="rad_Wheel" Grid.Column="2" Content="上浮滾輪"/>-->
                                    </Grid>

                                </GroupBox>
                                <GroupBox   Grid.Column="0" Grid.Row="1" Header="料架速度" Margin="10,5">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <CheckBox
                            Height="64"
                            IsChecked="{Binding RockSpeed}"
                            Style="{StaticResource speedDisplay}" />
                                        <Border Grid.Column="1" BorderThickness="1"  Width="auto" Height="auto" Margin="0"/>
                                        <local:SpeedArrowUserControl Grid.Column="2" Height="46" HorizontalAlignment="Center" Foreground="#17a7ff" Value="0" Visibility="Collapsed"/>


                                    </Grid>
                                </GroupBox>
                                <Grid Grid.Column="0" Grid.Row="2" Margin="5,5">
                                    <GroupBox  Header="出口 - 動力滾輪">
                                        <Grid IsEnabled="{ Binding OpenRoll }">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
                                                <ColumnDefinition Width="auto" />
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>
                                            <Grid.Resources>
                                                <Style TargetType="Button">
                                                    
                                                </Style>
                                            </Grid.Resources>
                                            
                                            
                                            
                                            
                                            
                                            <Button 
                                                IsEnabled="{Binding ExportReadOnly}"
                                                Width="80"
                                                Height="80"
                                                ToolTip="滾輪正轉" >
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                    <Setter Property="Background" Value="{StaticResource solidclr_DarkGray}" />
                                                     <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="{x:Type Button}">
                                                                    <Border
                                                                        x:Name="bor_LeftTop"
                                                                        Background="{TemplateBinding Background}"
                                                                        BorderBrush="#49FFFFFF"
                                                                        BorderThickness="2,2,0,0"
                                                                        CornerRadius="15">
                                                                        <Grid>
                                                                            <Border
                                                                                x:Name="bor_RightBottom"
                                                                                BorderBrush="#49000000"
                                                                                BorderThickness="0,0,2,2"
                                                                                CornerRadius="{Binding ElementName=bor_LeftTop, Path=CornerRadius}" />
                                                                            <Viewbox>
                                                                                <materialDesign:PackIcon
                                                                                Margin="1" Name="MPackIcon"
                                                                                Foreground="{StaticResource solidclr_CreamyWhite}" Kind="Restore"   HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                                            </Viewbox>
                                                                            <ContentPresenter
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Content="{TemplateBinding Content}"
                                TextBlock.FontFamily="{TemplateBinding FontFamily}"
                                TextBlock.FontSize="{TemplateBinding FontSize}"
                                TextBlock.Foreground="{TemplateBinding Foreground}" />
                                                                        </Grid>
                                                                    </Border>
                                                                    <ControlTemplate.Triggers>
                                                                        <EventTrigger RoutedEvent="Button.PreviewMouseLeftButtonDown">
                                                                            <BeginStoryboard>
                                                                                <Storyboard>
                                                                                    <ColorAnimation
                                        Storyboard.TargetName="MPackIcon"
                                        Storyboard.TargetProperty="Foreground.Color"
                                        To="Lime"
                                        Duration="0:0:0.1" />
                                                                                    <ThicknessAnimation
                                        Storyboard.TargetName="bor_LeftTop"
                                        Storyboard.TargetProperty="BorderThickness"
                                        To="0,0,2,2"
                                        Duration="0:0:0.01" />
                                                                                    <ThicknessAnimation
                                        Storyboard.TargetName="bor_RightBottom"
                                        Storyboard.TargetProperty="BorderThickness"
                                        To="2,2,0,0"
                                        Duration="0:0:0.01" />
                                                                                </Storyboard>
                                                                            </BeginStoryboard>
                                                                        </EventTrigger>
                                                                        <EventTrigger RoutedEvent="Button.PreviewMouseLeftButtonUp">
                                                                            <BeginStoryboard>
                                                                                <Storyboard FillBehavior="HoldEnd">
                                                                                    <ColorAnimation
                                        Storyboard.TargetName="MPackIcon"
                                        Storyboard.TargetProperty="(Foreground).Color"
                                        To="{StaticResource clr_CreamyWhite}"
                                        Duration="0:0:0.1" />
                                                                                    <ThicknessAnimation
                                        Storyboard.TargetName="bor_LeftTop"
                                        Storyboard.TargetProperty="BorderThickness"
                                        To="2,2,0,0"
                                        Duration="0:0:0.01" />
                                                                                    <ThicknessAnimation
                                        Storyboard.TargetName="bor_RightBottom"
                                        Storyboard.TargetProperty="BorderThickness"
                                        To="0,0,2,2"
                                        Duration="0:0:0.01" />
                                                                                </Storyboard>
                                                                            </BeginStoryboard>
                                                                        </EventTrigger>
                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                            <Setter Property="Cursor" Value="Hand" />
                                                                        </Trigger>
                                                                        <Trigger Property="IsEnabled" Value="False">
                                                                            <Setter TargetName="bor_LeftTop"  Property="Opacity" Value="0.3" />
                                                                        </Trigger>
                                                                    </ControlTemplate.Triggers>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Style>
                                                </Button.Style>

                                                <i:Interaction.Triggers>
                                                    <i:EventTrigger EventName="PreviewMouseLeftButtonDown">
                                                        <i:InvokeCommandAction  Command="{Binding RollerCommand}" CommandParameter="{x:Static STDEnum:MOBILE_RACK.OUTER}"/>
                                                    </i:EventTrigger>
                                                    <i:EventTrigger EventName="PreviewMouseLeftButtonUp">
                                                        <i:InvokeCommandAction  Command="{Binding RollerCommand}" CommandParameter="{x:Static STDEnum:MOBILE_RACK.NULL}"/>
                                                    </i:EventTrigger>
                                                </i:Interaction.Triggers>
                                            </Button>
                                            <Border Grid.Column="1" BorderThickness="1"  Width="auto" Height="auto" Margin="0"/>
                                            <Button
                                IsEnabled="{Binding ExportReadOnly}"
                                Grid.Column="2"
                                Width="80"
                                Height="80"
                                ToolTip="滾輪逆轉" >
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Background" Value="{StaticResource solidclr_DarkGray}" />
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="{x:Type Button}">
                                                                    <Border
                                                                        x:Name="bor_LeftTop"
                                                                        Background="{TemplateBinding Background}"
                                                                        BorderBrush="#49FFFFFF"
                                                                        BorderThickness="2,2,0,0"
                                                                        CornerRadius="15">
                                                                        <Grid>
                                                                            <Border
                                                                                x:Name="bor_RightBottom"
                                                                                BorderBrush="#49000000"
                                                                                BorderThickness="0,0,2,2"
                                                                                CornerRadius="{Binding ElementName=bor_LeftTop, Path=CornerRadius}" />
                                                                            <Viewbox>
                                                                                <materialDesign:PackIcon
                                                                                Margin="1" Name="MPackIcon"
                                                                                Foreground="{StaticResource solidclr_CreamyWhite}" Kind="Reload"   HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                                            </Viewbox>
                                                                            <ContentPresenter
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Content="{TemplateBinding Content}"
                                TextBlock.FontFamily="{TemplateBinding FontFamily}"
                                TextBlock.FontSize="{TemplateBinding FontSize}"
                                TextBlock.Foreground="{TemplateBinding Foreground}" />
                                                                        </Grid>
                                                                    </Border>
                                                                    <ControlTemplate.Triggers>
                                                                        <EventTrigger RoutedEvent="Button.PreviewMouseLeftButtonDown">
                                                                            <BeginStoryboard>
                                                                                <Storyboard>
                                                                                    <ColorAnimation
                                        Storyboard.TargetName="MPackIcon"
                                        Storyboard.TargetProperty="Foreground.Color"
                                        To="Lime"
                                        Duration="0:0:0.1" />
                                                                                    <ThicknessAnimation
                                        Storyboard.TargetName="bor_LeftTop"
                                        Storyboard.TargetProperty="BorderThickness"
                                        To="0,0,2,2"
                                        Duration="0:0:0.01" />
                                                                                    <ThicknessAnimation
                                        Storyboard.TargetName="bor_RightBottom"
                                        Storyboard.TargetProperty="BorderThickness"
                                        To="2,2,0,0"
                                        Duration="0:0:0.01" />
                                                                                </Storyboard>
                                                                            </BeginStoryboard>
                                                                        </EventTrigger>
                                                                        <EventTrigger RoutedEvent="Button.PreviewMouseLeftButtonUp">
                                                                            <BeginStoryboard>
                                                                                <Storyboard FillBehavior="HoldEnd">
                                                                                    <ColorAnimation
                                        Storyboard.TargetName="MPackIcon"
                                        Storyboard.TargetProperty="(Foreground).Color"
                                        To="{StaticResource clr_CreamyWhite}"
                                        Duration="0:0:0.1" />
                                                                                    <ThicknessAnimation
                                        Storyboard.TargetName="bor_LeftTop"
                                        Storyboard.TargetProperty="BorderThickness"
                                        To="2,2,0,0"
                                        Duration="0:0:0.01" />
                                                                                    <ThicknessAnimation
                                        Storyboard.TargetName="bor_RightBottom"
                                        Storyboard.TargetProperty="BorderThickness"
                                        To="0,0,2,2"
                                        Duration="0:0:0.01" />
                                                                                </Storyboard>
                                                                            </BeginStoryboard>
                                                                        </EventTrigger>
                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                            <Setter Property="Cursor" Value="Hand" />
                                                                        </Trigger>
                                                                        <Trigger Property="IsEnabled" Value="False">
                                                                            <Setter TargetName="bor_LeftTop"  Property="Opacity" Value="0.3" />
                                                                        </Trigger>
                                                                    </ControlTemplate.Triggers>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Style>
                                                </Button.Style>
                                                <i:Interaction.Triggers>
                                                    <i:EventTrigger EventName="PreviewMouseLeftButtonDown">
                                                        <i:InvokeCommandAction  Command="{Binding RollerCommand}" CommandParameter="{x:Static STDEnum:MOBILE_RACK.INSIDE}"/>
                                                    </i:EventTrigger>
                                                    <i:EventTrigger EventName="PreviewMouseLeftButtonUp">
                                                        <i:InvokeCommandAction  Command="{Binding RollerCommand}" CommandParameter="{x:Static STDEnum:MOBILE_RACK.NULL}"/>
                                                    </i:EventTrigger>
                                                </i:Interaction.Triggers>
                                            </Button>
                                        </Grid>
                                    </GroupBox>
                                    <CheckBox HorizontalAlignment="Right" VerticalAlignment="Top" Style="{ StaticResource CheckedStyle }" Width="20"
                                  IsChecked="{ Binding OpenRoll }" Margin="0,13,13,0"/>
