<UserControl x:Class="STD_105.CustomizedBoltsGroupSettingUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:STD_105"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
             xmlns:GD_STD_Enum="clr-namespace:GD_STD.Enum;assembly=GD_STD.Enum" 
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:STD105ValidRule="clr-namespace:STD_105.ValidationRules"
             mc:Ignorable="d" >
    <Border BorderThickness="1" BorderBrush="Gray" >
    <GroupBox Header="客製孔群設定" Style="{StaticResource ParameterGroupBox}">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <GroupBox Grid.Column="0" Grid.Row="0" Header="孔參數" Margin="2">
                    <!--直徑設定-->
                    <Grid Margin="0,0,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <CheckBox Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" IsChecked="{Binding CheckDia}" Content="孔直徑" />
                        <TextBox Grid.Column="1" Grid.Row="0" VerticalAlignment="Center" Margin="5,0">
                            <TextBox.Text>
                                <Binding Path="GroupBoltsAttr.Dia" StringFormat="{}" UpdateSourceTrigger="PropertyChanged" >
                                    <Binding.ValidationRules>
                                        <STD105ValidRule:CheckNumberRule NumberMin="0"/>
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>
                        <!--孔的起始位置-->
                        <CheckBox  Grid.Column="0" Grid.Row="1" VerticalAlignment="Center"  IsChecked="{Binding CheckStartHole}" Content="位置"/>
                        <ComboBox SelectedItem="{Binding StartHoleType}"  Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" Padding="2,3,0,0" Margin="5,0">
                            <dxmvvm:Interaction.Behaviors>
                                <dxmvvm:EnumItemsSourceBehavior EnumType="{x:Type GD_STD_Enum:START_HOLE}" AllowImages="False" />
                                <!--SortMode="DisplayName"-->
                            </dxmvvm:Interaction.Behaviors>
                        </ComboBox>
                    </Grid>
                </GroupBox>
                <GroupBox Header="位置" Grid.Column="1" Margin="2" >
                    <dxe:ComboBoxEdit  IsTextEditable="False" MinWidth="110" Style="{StaticResource SiegPositionComboBoxEdit}"
                                                           ApplyItemTemplateToSelectedItem="True"  EditValue="{Binding rbtn_DrillingFace}">
                        <dxmvvm:Interaction.Behaviors>
                            <dxmvvm:EnumItemsSourceBehavior EnumType="{x:Type GD_STD_Enum:FACE}" ImageSize="40,40" AllowImages="False" />
                        </dxmvvm:Interaction.Behaviors>
                    </dxe:ComboBoxEdit>
                </GroupBox>

                <GroupBox Header="孔群設定" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Margin="2">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition />
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <CheckBox Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" Content="形狀："/>

                        <ComboBox Grid.Column="2" Grid.Row="0" Margin="5" VerticalAlignment="Center" SelectedIndex="0" Padding="5,1,0,0">
                            <ComboBoxItem Content="陣列"/>
                        </ComboBox>

                        <CheckBox  Grid.Column="0" Grid.Row="1"  IsChecked="{Binding CheckX}" Content="孔X向間距："/>

                        <TextBox  Grid.Column="1" Grid.Row="1" MinWidth="100" VerticalAlignment="Center" >
                            <TextBox.Text>
                                <Binding Path="GroupBoltsAttr.dX" UpdateSourceTrigger="PropertyChanged" >
                                    <Binding.ValidationRules>
                                        <STD105ValidRule:CheckHoleGroupArrayStringRule/>
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>

                        </TextBox>

                        <CheckBox Grid.Column="0" Grid.Row="2" IsChecked="{Binding CheckY}" Content="孔Y向間距：" />
                        <TextBox  Grid.Column="1" Grid.Row="2"  MinWidth="100" VerticalAlignment="Center">
                            <TextBox.Text>
                                <Binding Path="GroupBoltsAttr.dY" UpdateSourceTrigger="PropertyChanged" >
                                    <Binding.ValidationRules>
                                        <STD105ValidRule:CheckHoleGroupArrayStringRule/>
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>

                        <!--技術文件參照:https://community.devexpress.com/blogs/wpf/archive/2015/01/27/devexpress-mvvm-framework-enumitemsourcebehavior.aspx-->

                        <CheckBox Grid.Row="3"  Content="特殊孔位：" IsThreeState="False" IsChecked="{Binding ComboxEdit_GroupBoltsTypeSelected_IsChecked}"/>
                        <dxe:ComboBoxEdit  IsTextEditable="False" Grid.Column="0" Grid.ColumnSpan="2"   Grid.Row="4"  Margin="0,5,5,0" IsEnabled="{Binding ComboxEdit_GroupBoltsTypeSelected_IsChecked}"
                                                           ApplyItemTemplateToSelectedItem="True" 
                                                                   EditValue="{Binding ComboxEdit_GroupBoltsTypeSelected}">
                            <dxmvvm:Interaction.Behaviors>
                                <dxmvvm:EnumItemsSourceBehavior EnumType="{x:Type GD_STD_Enum:GroupBoltsType}" ImageSize="95,95" />
                                <!--SortMode="DisplayName"-->
                            </dxmvvm:Interaction.Behaviors>
                            <dxe:ComboBoxEdit.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" FontSize="18"/>
                                        <TextBlock Text="{Binding Description}" Grid.Row="1" FontSize="12"/>
                                    </StackPanel>
                                </DataTemplate>

                            </dxe:ComboBoxEdit.ItemTemplate>

                        </dxe:ComboBoxEdit>





                    </Grid>
                </GroupBox>
                <StackPanel  Grid.Row="2" Orientation="Horizontal"  Grid.ColumnSpan="2">
                    <dxe:ComboBoxEdit Margin="5" Width="200"/>
                    <Button Style="{StaticResource SiegCustomButtonWhite}" Height="30"  Padding="10,0" Margin="5" Content="儲存孔群"/>
                    <Button Style="{StaticResource SiegCustomButtonWhite}" Height="30"  Padding="10,0" Margin="5" Content="刪除孔群"/>
                </StackPanel>
            </Grid>
        </ScrollViewer>
        </GroupBox>
    </Border>
</UserControl>
