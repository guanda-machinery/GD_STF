<dx:SplashScreenWindow x:Class="WPFSTD105.ProcessingScreenWindow"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                       xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
                       xmlns:local="clr-namespace:WPFSTD105"
                       WindowStyle="None"
                       WindowStartupLocation="CenterScreen"
                       mc:Ignorable="d"
                       Background="Transparent"
 
                       DataContext="{x:Static dxmvvm:DXSplashScreenViewModel.DesignTimeData}">
    <Grid   Width="400"
                       Height="100">
        <Border
                BorderBrush="#49FFFFFF"
                Background="{ StaticResource solidclr_CreamyGray }"
                CornerRadius="20"
                BorderThickness="0">
        </Border>
        <Grid Margin="10,0" Grid.Column="1" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition  Width="auto"/>
                <ColumnDefinition  Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <ProgressBar BorderThickness="0" Grid.Row="0" Padding="0"  Margin="10" Grid.RowSpan="2"
                     Value="{Binding Progress}"
                     Maximum="100" 
                     Width="60" Height="60"
                     Foreground="{ StaticResource solidclr_ButtonBlue }"
                     Background="LightGray"
                     IsIndeterminate="{Binding IsIndeterminate}"
                     Style="{ StaticResource MaterialDesignCircularProgressBar }"
                     />
            <StackPanel Grid.RowSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal" Visibility="{Binding IsIndeterminate, Converter={dx:BooleanToVisibilityConverter Invert=True}}">
                <TextBlock Text="{Binding Progress}"         
                       FontSize="20"
                       Foreground="{ StaticResource solidclr_DimGray }"
                   Style="{ StaticResource tbk_ContentTitle }"/>
                <TextBlock Text="%" HorizontalAlignment="Right"
                       FontSize="20"
                       Foreground="{ StaticResource solidclr_DimGray }"
                   Style="{ StaticResource tbk_ContentTitle }"/>
            </StackPanel>

            <TextBlock  Margin="0,2" Grid.Row="0" Grid.Column="1"
                   FontSize="24"
                   Text="{Binding Status, UpdateSourceTrigger=PropertyChanged}"
                   Foreground="{ StaticResource solidclr_DimGray }"
                   HorizontalAlignment="Left"
                   Style="{ StaticResource tbk_ContentTitle }" />
            <ProgressBar BorderThickness="0"  Grid.Row="1" Grid.Column="1" Padding="0"  Margin="0,10"
                     Value="{Binding Progress}"
                     Maximum="100"
                     Height="20"
                     Foreground="{ StaticResource solidclr_ButtonBlue }"
                     Background="LightGray"
                     IsIndeterminate="{Binding IsIndeterminate}"
                     Style="{ StaticResource MaterialDesignLinearProgressBar }"
                     />
        </Grid>
    </Grid>
</dx:SplashScreenWindow>
